// Learning Vectors.cpp : This file contains the 'main' function. Program execution begins and ends there.
// Gronflax vector quickie

#include <iostream>
#include <vector>

int main()
{
    using namespace std;
    int odd = 1, even = 0;
    vector<int> list = {2, 4, 3, 6, 1, 9};  //just some vector play

    for (int i = 0; i < list.size(); i++) {

        if (list[i] % 2 == 0) {
            even = even + list[i];
        }
        else {
            odd = odd * list[i];
        }
    }

    cout << odd << " & " << even << "\n";
}

